{
  "name": "glacier-tokens",
  "scripts": {
    "hardhat:moonbaseAlpha": "hardhat --network moonbaseAlpha",
    "hardhat:hardhat": "hardhat --network hardhat",
    "compile": "SKIP_LOAD=true hardhat compile",
    "alpha": "npm run compile && npm run hardhat:moonbaseAlpha deploy",
    "hardhat": "npm run compile && npm run hardhat:hardhat deploy",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@openzeppelin/contracts": "^4.8.3",
    "hardhat": "^2.14.0",
    "solhint": "^3.4.1"
  },
  "dependencies": {
    "@types/lowdb": "^1.0.11",
    "dotenv": "^16.0.3",
    "lowdb": "^1.0.0",
    "tmp-promise": "^3.0.3"
  }
}
